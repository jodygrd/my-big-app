<h1> Create A Draft </h1>

<div class="card card-body card-padding">
	<div>
		<%= form_tag "/drafts", method: :post do %>
			Name This Draft: <input type="text" name="name"> <br> 
			<div>
			Paste Text Here: <textarea name="text"> </textarea>
			</div>
			</div>
			<label for="file">Or Upload a Docx</label> <%= file_field_tag "file" %>
			For Which Project: <%= collection_select(:drafts, :work_id, Work.all, :id, :name, prompt: "Select Work") %> <br>
			<input type="submit" value="create draft">
		<% end %>
	</div>
</div>

