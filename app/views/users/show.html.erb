<section id="content">
    <div class="container">
        <div class="c-header">
            <h2><%= @user.name %> <small>Writer</small></h2>
        </div>

        <div class="card" id="profile-main">
            <div class="pm-overview c-overflow">
                <div class="pmo-pic">
                    <div class="p-relative">
                        <a href="">
                            <img class="img-responsive" src="<%= @user.photo%>" alt="">
                        </a>

                        <div class="dropdown pmop-message">

                            <div class="dropdown-menu">
                                <textarea placeholder="Write something..."></textarea>

                                <button class="btn bgm-green btn-float"><i class="zmdi zmdi-mail-send"></i></button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="pmo-block pmo-contact hidden-xs">
                    <h2>Contact</h2>

                    <ul>
                        <li><i class="zmdi zmdi-email"></i> email_optional</li>
                        <li><i class="zmdi zmdi-twitter"></i> twitter_url </li>
                        <li><i class="zmdi zmdi-layers"> </i> blog_url </li>
                    </ul>
                </div>
            </div>

            <div class="pm-body clearfix">
                <div class="pmb-block">
                    <div class="pmbb-header">
                        <h2><i class="zmdi zmdi-equalizer m-r-5"></i> about </h2>

                    </div>
                    <div class="pmbb-body p-l-30">
                        <div class="pmbb-view">
                            <%= @user.about %>
                        </div>
                    </div>
                </div>
                                <div class="pmb-block">
                    <div class="pmbb-header">
                        <h2><i class="zmdi zmdi-equalizer m-r-5"></i> writing experience</h2>

                        <ul class="actions">
                            <li class="dropdown">
                                <a href="" data-toggle="dropdown">
                                    <i class="zmdi zmdi-more-vert"></i>
                                </a>

                                <ul class="dropdown-menu dropdown-menu-right">
                                    <li>
                                        <a data-pmb-action="edit" href="">Edit</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="pmbb-body p-l-30">
                        <div class="pmbb-view">
                           <%= @user.experience %> 
                        </div>
                    </div>
                </div>

                <div class="pmb-block">
                    <div class="pmbb-header">
                        <h2><i class="zmdi zmdi-account m-r-5"></i> <%=@user.name%>'s groups</h2>
												<ul class="actions">
                            <li class="dropdown">
                                <a href="" data-toggle="dropdown">
                                    <i class="zmdi zmdi-more-vert"></i>
                                </a>

                                <ul class="dropdown-menu dropdown-menu-right">
                                    <li>
                                        <a data-pmb-action="edit" href="">Edit</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="pmbb-body p-l-30">
                        <div class="pmbb-view">
                        	<%@user.groups.each do |group| %> 
                            <dl class="dl-horizontal">
                                <dt><a href="/groups/<%=group.id%>"><%=group.name%></a></dt>
                                <dd><%=group.category.name%></dd>
                            </dl>
                          <%end%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>